                <div id="search_modal" class="modal fade">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header text-center">
                                <button type="button" class="close" data-dismiss="modal">Ã—</button>
                                  <h3 class="semibold modal-title text-primary">Search</h3>
                                <p class="text-muted">Set the criteria to search</p>
                            </div>
                            <div class="modal-body">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label font-18">Gender</label>
                                        <div class="col-sm-10 " >
                                            <span class=" custom-radio custom-radio-primary mr15">  
                                                <input type="radio" id="genderradio1" value="male" name="gender" <%= current_user.gender == 'female' ? 'checked' : '' %> >  
                                                <label for="genderradio1">&nbsp;&nbsp;Male</label>   
                                            </span>
                                            <span class=" custom-radio custom-radio-primary">  
                                                <input type="radio" id="genderradio2" value="female" name="gender" <%= current_user.gender == 'male' ? 'checked' : '' %>>  
                                                <label for="genderradio2">&nbsp;&nbsp;Female</label>   
                                            </span>
                                        </div>
                                    <label class="col-sm-12 control-label font-18">Location</label>
                                    <br>
                                      <ul class="" id="ul_places">
                                        <%= render partial: 'layouts/checkbox_places' %>
                                      </ul>
                            </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary" id="search_submit">Search</button>
                            </div>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div>
                <!--/ END modal-lg -->

