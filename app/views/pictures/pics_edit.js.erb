$("#pics_modal_body").html("<%= j render partial: 'pictures/pics_edit' %>");
<% if @pictures.nil? %>
	$("#pics_modal_body").html("<h4 class='text-center'> No pictures added </h4>");
<% end %>
$("[data-toggle~=unveil]").unveil(200, function () {
	$(this).load(function () {
		$(this).addClass("unveiled");
	});
});



$(".set_default").click(function(){
	$(".set_default").html("<i class='ico-heart icon-silver'></i>");
	$(this).html("<i class='ico-heart icon-red'></i>");
	var pic = $(this).prev('p').html();
	$.getScript("pictures/set_default_pic?default_pic="+pic);
});

