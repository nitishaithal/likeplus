<script type="text/javascript">
    $(".li_link").click(function(){
        $("#badge-modal-sm").modal('show');
        $(".div-modal-logo").html($(this).find('h1').html());
        $(".div-modal-text").html($(this).find('span').html());
        var str = encodeURIComponent($(this).find('span').text());
        if(str == 'Beautiful%20princess' || str == 'Handsome%20prince' ){
            str = "Handsome%20prince%20/%20Beautiful%20princess"
        }
        $(".badge-list").html("<div class='indicator inline'><span class='spinner'></span></div>");
        $(".badge-list").load("/my_badges/badge_list?type=" + str);
    });
</script>


